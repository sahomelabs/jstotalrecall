def COLOR_MAP = [
    'SUCCESS': 'good', 
    'FAILURE': 'danger',
]
pipeline {
    agent any
    stages{
        stage('Build') {
            steps {
                git branch: 'main', url: 'https://github.com/sahomelabs/jstotalrecall.git'
}
    post {
        always {
            echo 'Slack Notifications.'
            slackSend channel: '#perscholarcicd',
                color: COLOR_MAP[currentBuild.currentResult],
                message: "*${currentBuild.currentResult}:* Job ${env.JOB_NAME} build ${env.BUILD_NUMBER} \n More info at: ${env.BUILD_URL}"
        }
    }
